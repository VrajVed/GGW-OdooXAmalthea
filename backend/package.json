{
  "name": "user-management-backend",
  "version": "1.0.0",
  "description": "Production-grade Node.js/Express backend with PostgreSQL for user management",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:setup": "psql -U postgres -d ggw_odoo_db -f database/oneflow-schema.sql",
    "db:seed": "psql -U postgres -d ggw_odoo_db -f database/seed-data.sql",
    "db:create": "psql -U postgres -c \"CREATE DATABASE ggw_odoo_db;\"",
    "db:drop": "psql -U postgres -c \"DROP DATABASE IF EXISTS ggw_odoo_db;\"",
    "db:reset": "npm run db:drop && npm run db:create && npm run db:setup && npm run db:seed",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "express",
    "postgresql",
    "user-management",
    "authentication"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.4",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
