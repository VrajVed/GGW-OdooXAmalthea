# ============================================================================
# Environment Variables Configuration
# ============================================================================
# IMPORTANT: 
# 1. Copy this file to .env (without the .example extension)
# 2. Replace placeholder values with your actual configuration
# 3. NEVER commit .env to version control (add to .gitignore)
# ============================================================================

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=5000
HOST=0.0.0.0
APP_NAME=user_management_app

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ============================================================================
# PostgreSQL Database Configuration
# ============================================================================
# SECURITY NOTE: Use strong passwords and change default values

# Database Connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=user_management_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Connection Pool Settings
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000
DB_QUERY_TIMEOUT=30000

# ============================================================================
# JWT Configuration (for future implementation)
# ============================================================================
# Generate a secure random string: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# JWT_SECRET=your_jwt_secret_key_here
# JWT_EXPIRATION=24h

# ============================================================================
# Rate Limiting (recommended for production)
# ============================================================================
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# Logging Configuration
# ============================================================================
# LOG_LEVEL=info
# LOG_FILE_PATH=./logs/app.log
